<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_view_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:background="@color/lightGray" />

        <TextView
            android:id="@+id/item_view_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/item_view_image_view"
            android:text="Название упражнения"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_view_reps_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/item_view_horizontal_separator"
            android:layout_marginRight="8dp"
            android:text="14"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_view_horizontal_separator"
            android:layout_toLeftOf="@id/item_view_reps_text_view"
            android:src="@drawable/ic_workout_reps" />

        <ImageView
            android:id="@+id/item_view_context_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_more_vert" />


        <TextView
            android:id="@+id/item_view_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_view_title_text_view"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/item_view_image_view"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="@string/ipsum" />

        <LinearLayout
            android:id="@+id/item_view_horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/item_view_image_view"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/item_view_record_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_view_horizontal_separator"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_trophy" />

        <TextView
            android:id="@+id/item_view_record_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_view_horizontal_separator"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/item_view_record_image_view"
            android:text="Дата (кол-во повторов)"
            android:textSize="16sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>